<h2>Title</h2>

<table class="table">
  <tr>
    <th>Event Name</th>
    <th>Active</th>
    <th></th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td>
      <% if event.active %>
        <span class="badge bg-success">Yes</span>
      <% else %>
        <span class="badge bg-danger">No</span>
      <% end %>
      </td>
      <td><%= link_to 'Show', admin_event_path(event) %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="3">
      <%= link_to 'Create Event', new_admin_event_path() %>
    </td>
  </tr>
</table>

